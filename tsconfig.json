{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node16",
    "jsx": "react",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "**/src/**/*.ts",
    "**/test/**/*.ts",
    "**/src/**/*.tsx",
    "**/test/**/*.tsx",
    "packages/*/*.ts"
  ],
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**/*",
    "**/lib/**/*"
  ]
}